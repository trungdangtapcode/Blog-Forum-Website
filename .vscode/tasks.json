{
	"version": "2.0.0",
	"presentation": {
	  "echo": false,
	  "reveal": "always",
	  "focus": false,
	  "panel": "dedicated",
	  "showReuseMessage": false
	},
	"tasks": [
	  {
		"label": "My custom terminal snippet",
		"dependsOn": [
		  "Terminal 1",
		  "Terminal 2",
		  "Terminal 3",
		  "Terminal 4"
		],
		"group": {
		  "kind": "build",
		  "isDefault": true
		},
		"runOptions": {
		  "runOn": "folderOpen"
		}
	  },
	  {
		"label": "Terminal 1",
		"type": "shell",
		// "command": "start cmd.exe /K cd /D \"${workspaceFolder}\\dir1\"",
		"command": "cmd.exe",
		"args": ["/K", "npm run dev"],
		"options": {
		  "cwd": "${workspaceFolder}/next-web"
		},
		"isBackground": true,
		"problemMatcher": [],
		"presentation": {
		  "group": "project-terminals-1"
		}
	  },
	  {
		"label": "Terminal 2",
		"type": "shell",
		"command": "cmd.exe",
		"args": ["/K", "echo Terminal 2"],
		"options": {
		  "cwd": "${workspaceFolder}/next-web"
		},
		"isBackground": true,
		"problemMatcher": [],
		"presentation": {
		//   "reveal": "never",
		  "group": "project-terminals-1"
		}
	  },
	  {
		"label": "Terminal 3",
		"type": "shell",
		"command": "cmd.exe",
		"args": ["/K", "npm run start:dev"],
		"options": {
		  "cwd": "${workspaceFolder}/dispatch"
		},
		"isBackground": true,
		"problemMatcher": [],
		"presentation": {
		  "group": "project-terminals-2"
		}
	  },
	  {
		"label": "Terminal 4",
		"type": "shell",
		"command": "cmd.exe",
		"args": ["/K", "echo Terminal 4"],
		"options": {
		  "cwd": "${workspaceFolder}/dispatch"
		},
		"isBackground": true,
		"problemMatcher": [],
		"presentation": {
		//   "reveal": "never",
			"group": "project-terminals-2"
		}
	  }
	]
  }